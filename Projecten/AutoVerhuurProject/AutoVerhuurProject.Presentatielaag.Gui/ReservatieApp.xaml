<Window x:Class="AutoVerhuurProject.Presentatielaag.Gui.ReservatieApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoVerhuurProject.Presentatielaag.Gui"
        mc:Ignorable="d"
        Title="Reservatie Maken" Height="800" Width="1600">
    <Grid>


        <StackPanel Grid.Column="0" Grid.RowSpan="2" >

            <Label  Content="Vestiging kiezen" 
                HorizontalAlignment="Center"
               ></Label>
            <ComboBox x:Name="VestigingLijstView" Margin="10" Width="120"
                      SelectionChanged="VestigingLijstView_SelectionChanged" SelectedIndex="0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <ComboBoxItem Content="{Binding LuchthavenVestiging}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <TextBlock Text="Aantal Personen:" HorizontalAlignment="Center" FontSize="16" FontFamily="Arial"/>
            <ComboBox Name="FilterByZitplaatsen" Margin="10" SelectedIndex="0" SelectionChanged="FilterByZitplaatsen_SelectionChanged" Width="120"/>
            <TextBox Name="txtZitplaatsen" SelectionChanged="txtZitplaatsen_SelectionChanged" Width="120"/>

        </StackPanel>
        <DockPanel Grid.Row="1" Grid.ColumnSpan="1" Grid.Column="0">
            <Label DockPanel.Dock="Top" Content="Overzicht autos vestiging"
                   HorizontalAlignment="Center"/>
            <ListView
                Name="AutosLijstViewVestiging"
                SelectionMode="Single"
                SelectionChanged="AutosLijstViewVestiging_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nummerplaat" DisplayMemberBinding="{Binding Nummerplaat}" Width="100"/>
                        <GridViewColumn Header="Model" DisplayMemberBinding="{Binding Model}" Width="100"/>
                        <GridViewColumn Header="Zitplaatsen"  DisplayMemberBinding="{Binding Zitplaatsen}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>

        <StackPanel Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="99" >
            <Label Content="Datum en terugbrengvestiging" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <DatePicker Name="DatumBegin" SelectedDateFormat="Long" FontFamily="Arial" FontSize="15"
                        CalendarStyle="{StaticResource styleCalendar}" Margin="7" SelectedDateChanged="Datepicker_SelectionChanged_BeginDatum">
                <DatePicker.BlackoutDates>
                </DatePicker.BlackoutDates>
            </DatePicker>
            <DatePicker Name="EindeDatum" Margin="7" SelectedDateFormat="Long" FontFamily="Arial"
                        FontSize="15" SelectedDateChanged="Datepicker_SelectionChanged_EindeDatum"
                        CalendarStyle="{StaticResource styleCalendar}">
                <DatePicker.BlackoutDates>
                    
                </DatePicker.BlackoutDates>
            </DatePicker>

            <ComboBox Name="TerugBrengVestigingLijst" Width="120" Margin="10" SelectionChanged="TerugBrengVestigingLijst_SelectionChanged" SelectedIndex="0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <ComboBoxItem Content="{Binding LuchthavenVestiging}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Content="Maak Reservatie" Width="150" FontFamily="Arial" FontSize="16" Margin="10" Padding="5" Click="ButtonReservatie_Click"/>
            <Label Content="Zoek reservaties" HorizontalAlignment="Center"/>
            <ComboBox Name="ZoekFilters" Width="120" Margin="10" Padding="5" SelectedIndex="0" SelectionChanged="ZoekFilters_SelectionChanged"/>
            <TextBox Name="txtZoekFilter" SelectionChanged="txtZoekFilter_SelectionChanged" Width="120" Margin="10" />
            <DatePicker Name="DateZoekFilter" Margin="7" SelectedDateChanged="DateZoekFilter_SelectedDateChanged"
                        CalendarStyle="{StaticResource styleCalendar}" SelectedDateFormat="Long"/>
            <ListView Name="ReserveringenLijstView">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Voornaam" DisplayMemberBinding="{Binding klantDTO.Voornaam}" Width="auto"/>
                        <GridViewColumn Header="Achternaam" DisplayMemberBinding="{Binding klantDTO.Achternaam}" Width="auto"/>
                        <GridViewColumn Header="Luchthaven" DisplayMemberBinding="{Binding vestigingDTO.LuchthavenVestiging}" Width="auto"/>
                        <GridViewColumn Header="StartDatum" DisplayMemberBinding="{Binding StartHuurPeriode }" Width="auto"/>
                        <GridViewColumn Header="Einddatum" DisplayMemberBinding="{Binding EindeHuurPeriode }" Width="auto"/>
                        <GridViewColumn Header="Model Auto" DisplayMemberBinding="{Binding autoDTO.Model }" Width="auto"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        

        <Grid.RowDefinitions>
            <RowDefinition  Height="*"/>
            <RowDefinition Height="2.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2.2*"/>


        </Grid.ColumnDefinitions>
    </Grid>
</Window>
