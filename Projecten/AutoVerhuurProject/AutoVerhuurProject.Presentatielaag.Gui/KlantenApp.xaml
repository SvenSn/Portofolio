<Window x:Class="AutoVerhuurProject.Presentatielaag.Gui.KlantenApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoVerhuurProject.Presentatielaag.Gui"
        mc:Ignorable="d"
        Title="KlantenApp" Height="450" Width="800"
        Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="367*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,39" Grid.RowSpan="2">

            <Label DockPanel.Dock="Top" Content="Klanten"
            HorizontalAlignment="Center" Width="auto" >
            </Label>
            <ComboBox Name="FilterBy" HorizontalAlignment="Right" DockPanel.Dock="Top"  
                     SelectedIndex="0" Margin="7" Width="auto"/>
            <TextBox DockPanel.Dock="top"  Name="Textfilternaam" Width="125" 
                     FontSize="12" Height="20"  Foreground="Gray" TextChanged="Textfilternaam_TextChanged"
                     BorderBrush="Black" BorderThickness="1" Margin="2"
                      HorizontalAlignment="Right" />


            <ListView x:Name="KlantenLijstView" 
               SelectionMode="Single" 
               SelectionChanged="KlantenLijstView_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Voornaam" Width="auto" DisplayMemberBinding="{Binding Voornaam}"/>
                        <GridViewColumn Header="Achternaam" Width="auto" DisplayMemberBinding="{Binding Achternaam}"/>
                        <GridViewColumn Header="Email" Width="auto" DisplayMemberBinding="{Binding Email}"/>
                    </GridView>
                </ListView.View>
            </ListView>

        </StackPanel>
        <Button  Grid.Row="1" Content="Login" FontSize="20" Background="LightGray" Foreground="Black" Click="Click_Button_Login" Grid.ColumnSpan="2"/>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>

    </Grid>
</Window>
