<Page x:Class="CadeaubonProject.Presentatielaag.Gui.Pages.AccountPagina"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CadeaubonProject.Presentatielaag.Gui.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AccountPagina" Background="LightGray">


    <Grid>
        <Button Content="Terug" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Command="NavigationCommands.BrowseBack"/>


        <Label Content="Voornaam:" Margin="63,115,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="Achternaam:" Margin="63,178,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="Email:" Margin="63,247,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <TextBox Text="{Binding Voornaam}" 
                 IsReadOnly="True" Margin="166,115,0,0" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <TextBox Text="{Binding Achternaam}" 
                 IsReadOnly="True" Margin="166,180,0,0" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <TextBox Text="{Binding Email}" 
                 IsReadOnly="True" Margin="166,247,0,0" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Page>
