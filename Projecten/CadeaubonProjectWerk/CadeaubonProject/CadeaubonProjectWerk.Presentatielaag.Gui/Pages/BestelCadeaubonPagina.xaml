<Page x:Class="CadeaubonProject.Presentatielaag.Gui.Pages.BestelCadeaubonPagina"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CadeaubonProject.Presentatielaag.Gui.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BestelCadeaubonPagina" Background="LightGray">

    <Grid>
        <Button Content="Terug" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Command="NavigationCommands.BrowseBack" Height="30" Margin="5,5,0,0"/>
        <TextBlock Text="Koop een cadeaubon nu voor jezelf of vrienden!" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Height="26" Width="424"/>
        <TextBlock Text="Selecteer een bedrag" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="20" Margin="0,134,0,0" Height="27" Width="186"/>


        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="auto" Width="auto">
            <RadioButton x:Name="RadioButton5EUR" GroupName="prijskeuze" Width="70" Height="40" Margin="10" Content="5€" Background="LightGray" Foreground="Black" BorderBrush="black" BorderThickness="1" Click="RadioButton5EUR_Click"/>
            <RadioButton x:Name="RadioButton20EUR" GroupName="prijskeuze" Width="70" Height="40" Margin ="10" Content="20€" Background="LightGray" Foreground="Black" BorderBrush="black" BorderThickness="1" Click="RadioButton20EUR_Click"/>
            <RadioButton Name="RadioButton50EUR" GroupName="prijskeuze" Width="70" Height="40" Margin="10" Content="50€" Background="LightGray" Foreground="Black" BorderBrush="black" BorderThickness="1" Click="RadioButton50EUR_Click"/>
        </WrapPanel>


        <StackPanel Grid.Row="2">
            <TextBox Name="CustomAmountBox" Background="White" BorderBrush="Black" BorderThickness="0.5" GotFocus="CustomAmountBox_GotFocus" LostFocus="CustomAmountBox_LostFocus" TextChanged="CustomAmountBox_TextChanged"/>
            <ComboBox  Width="200" Height="25" Margin="10"
                  x:Name="CadeaubonTypeLijst" SelectionChanged="CadeaubonTypeLijst_SelectionChanged"/>

            <Button Name="BestellingMakenButton" Content="Bestellen" Click="BestellenButton_Click"/>
        </StackPanel>


        <Grid.RowDefinitions>
            <RowDefinition Height="171*"/>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>

    </Grid>
</Page>
