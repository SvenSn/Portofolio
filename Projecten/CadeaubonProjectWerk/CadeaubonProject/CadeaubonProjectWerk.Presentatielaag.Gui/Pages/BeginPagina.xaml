<Page x:Class="CadeaubonProject.Presentatielaag.Gui.Pages.BeginPagina"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CadeaubonProject.Presentatielaag.Gui.Pages"
      xmlns:n="clr-namespace:CadeaubonProject.Presentatielaag.Gui"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BeginPagina">
    <Page.Background>
        <ImageBrush  ImageSource="/images/BestellingschermOptie2.jpg"/>
    </Page.Background>
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Center" Grid.Row="0" >
            <TextBlock FontSize="25">
                Welkom <Run Text="{Binding Voornaam}" FontSize="25"/>
            </TextBlock>
        </StackPanel>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
            <n:NavigatieButton x:Name="AccountButton" Tekst="Account" Margin="5" AfbeeldingSource="/images/AccountIcon.png" NavUri="/Pages/AccountPagina.xaml" FontSize="25" Click="Button_Click_Account"/>
            <n:NavigatieButton x:Name="BestellingenButton" Tekst="Bestellingen" Margin="5" AfbeeldingSource="/images/BestellingenGedaanIcon.png" NavUri="/Pages/BestellingenPagina.xaml" FontSize="25" Click="Button_Click_Bestellingen" />
            <n:NavigatieButton x:Name="BestelNuButton" Tekst="Bestel nu!" Margin="5" AfbeeldingSource="/images/BestellingIcon.png" NavUri="/Pages/BestelCadeaubonPagina.xaml" FontSize="25" Click="Button_Click_BestelNu" />
            <n:NavigatieButton x:Name="RedeemNuButton" Tekst="Redeem now!" Margin="5" FontSize="25"  AfbeeldingSource="/images/redeemLogo.png" NavUri="/Pages/RedeemCadeaubonPagina.xaml" Click="Button_Click_Redeem"/>
        </WrapPanel>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
    </Grid>
</Page>
