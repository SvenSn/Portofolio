<Window x:Class="AutoVerhuurProject.Presentatielaag.Gui.KeuzeApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoVerhuurProject.Presentatielaag.Gui"
        mc:Ignorable="d"
        Title="Maak jouw keuze" Height="600" Width="800" Closing="Window_Closing" >
    <Window.Background>
        <ImageBrush ImageSource="/Images/KeuzeImage.png" Stretch="Fill"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Width="150" Height="40" HorizontalAlignment="Center" Background="LightGray"
                Foreground="Black" Content="Klant inloggen" Click="Click_Button_KlantLogin"/>
        <Button Width="150" Height="40" HorizontalAlignment="Center" Grid.Column="0" 
                Background="LightGray" Foreground="black" Content="Gegevens initialiseren" 
                 Click="Button_Click_GegevensApp"/>
        <Button Grid.Column="2" Width="150" Height="40" Background="LightGray" Foreground="Black" HorizontalAlignment="Center"
                 Content="Reserveringen" Click="Click_Button_Reservatie" />
    </Grid>
</Window>
