<Page x:Class="CadeaubonProject.Presentatielaag.Gui.Pages.RedeemCadeaubonPagina"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CadeaubonProject.Presentatielaag.Gui.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RedeemCadeaubonPagina" Background="LightGray">

    <Grid>
        <Button Content="Terug" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Command="NavigationCommands.BrowseBack" Height="30" Margin="5,5,0,0"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Label Content="Kies welke cadeaubon: " HorizontalAlignment="Center" FontSize="24" Padding="5" Margin="5"/>
            <ListBox x:Name="BestellingenListBox" SelectionMode="Single" Height="180" Margin="5" Width="auto" SelectionChanged="BestellingenListBox_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="4" Margin="5" Padding="5">
                            <StackPanel>
                                <!-- Beschrijving van de bestelling -->
                                <TextBlock Text="{Binding Beschrijving}" FontWeight="Bold" FontSize="14"/>

                                <!-- Cadeaubon info -->
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Cadeaubon: " FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding cadeaubonDTO.Saldo, StringFormat=€{0:N2}}" />
                                    <TextBlock Text=" - " />
                                    <TextBlock Text="{Binding cadeaubonDTO.Datum, StringFormat=Vervalt op: {0:dd/MM/yyyy}}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ComboBox Width="200" Height="28" ItemsSource="{Binding Winkels}" SelectedIndex="0" SelectionChanged="ComboBox_SelectionChanged"/>
            <TextBox x:Name="TextBoxBedrag" PreviewTextInput="Preview_TextInput_Nummer" TextChanged="TextBoxBedrag_TextChanged"/>
            <Button x:Name="btnRedeem" Content="Redeem" Click="btnRedeem_Click"/>
        </StackPanel>
    </Grid>
</Page>
