<Window x:Class="CadeaubonProject.Presentatielaag.Gui.KlantRegistreren"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CadeaubonProject.Presentatielaag.Gui"
        mc:Ignorable="d"
        Title="Registreer je nu!" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/images/KlantenRegistratieSchermOptie1.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBox Name="VoornaamKlant" LostFocus="VoornaamTextBox_LostFocus" GotFocus="VoornaamTextBox_GotFocus"/>
            <TextBox Name="AchternaamKlant" GotFocus="AchternaamTextBox_GotFocus" LostFocus="AchternaamTextBox_LostFocus"/>
            <TextBox Name="EmailKlant" GotFocus="EmailTextBox_GotFocus" LostFocus="EmailTextBox_LostFocus"/>
            <Grid>
                <PasswordBox Name="PasswoordKlant" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus" PasswordChanged="PasswordBox_PasswordChanged"/>
                <TextBlock x:Name="PasswordPlaceholder"
                       Text="Paswoord"
                       Foreground="Gray"
                       Margin="304,8,0,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       FontSize="15"
                       IsHitTestVisible="False"/>
            </Grid>
            <Button Name="Registreer" Height="35" Width="200" Content="Registreer" FontSize="16" Click="Button_Click_RegistreerKlant"/>
        </StackPanel>

    </Grid>
</Window>
